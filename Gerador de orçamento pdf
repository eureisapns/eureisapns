    "\n",
    "pdf.text(28, 137, projeto)\n",
    "pdf.text(102, 137, (estimativa) + (hora))\n",
    "pdf.text(164.5, 137, (valor_hora) + (real) + (hora))\n",
    "pdf.text(115, 137, prazo_entrega)\n",
